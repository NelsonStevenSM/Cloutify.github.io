---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Logo from "@assets/Logo.svg";
import { Picture } from "astro:assets";
import Icon from "astro-icon";

const menuitems = [
  {
    title: "Inicio",
    path: "#",
    children: [
      { title: "Item 1", path: "#" },
      { title: "Item 2", path: "#" },
      { title: "Item 3", path: "#" },
      { title: "Item 4", path: "#" },
    ],
  },
  {
    title: "Servicios",
    path: "/",
  },
  {
    title: "Nosotros",
    path: "/",
  },
  // {
  //   title: "Paginas",
  //   path: "/blog",
  // },
  {
    title: "Contacto",
    path: "/",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <Picture
            src={Logo}
            alt="Protecso"
            widths={[100, 300, 500]}
            sizes="(max-width: 600px) 100vw, 120px"
            loading="eager"
            format="avif"
            class="w-48"
          />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-8 h-8 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900"
                    >
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
        <Link href="#" style="muted" size="md" block class="flex justify-center items-center">
          <Icon class="h-6 w-6 mr-1" name="mdi:whatsapp" />
           993 092 774
        </Link>
          <Link href="#" size="md" block>ยก Iniciemos !</Link>
        </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="#" style="muted" size="md" class="flex justify-center items-center">
          <Icon class="h-6 w-6 mr-2" name="mdi:whatsapp" />
           993 092 774
        </Link>
        <Link href="#" size="md" class="font-bold">ยก Iniciemos !</Link>
      </div>
    </div>
  </header>
</Container>
<style>

  [astro-icon="mdi:whatsapp"]{
    /* color: #369942; */
  }
</style>
